<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#58D5C9"
    android:padding="0dp"
    tools:context=".RadioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/gradient"
            android:hapticFeedbackEnabled="false"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/radioImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient"
                app:srcCompat="@drawable/ic_baseline_radio_24"
                tools:srcCompat="@drawable/ic_baseline_radio_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="reference"
            android:textAlignment="center"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/radioTitle"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#99DCD5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/playRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00897B"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/pauseRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="#00897B"
                app:srcCompat="@android:drawable/ic_media_pause" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>