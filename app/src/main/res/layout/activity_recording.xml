<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    tools:context=".CHAT.Chat">


    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="320dp"
        android:background="@drawable/round_back_light_10"
        android:src="@drawable/back_btn" />

    <Button
        android:id="@+id/main_record"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/play_record"
        android:layout_alignParentStart="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/pause_record"
        android:text="Record Audio" />

    <Button
        android:id="@+id/pause_record"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/pause_play"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@id/play_record"
        android:text="Pause record" />

    <Button
        android:id="@+id/play_record"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="80dp"
        android:layout_toStartOf="@+id/pause_play"
        android:text="Play Record" />


    <Button
        android:id="@+id/pause_play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="80dp"
        android:text="Pause Play" />


    <TextView
        android:id="@+id/recording"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="75dp"
        android:text="Recording"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/recording_path"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="50dp"
        android:maxWidth="300dp"
        android:text="Recording File Path"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_record"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="43dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textSize="40dp" />



</RelativeLayout>